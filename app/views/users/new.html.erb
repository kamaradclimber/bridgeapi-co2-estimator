<h1>Hello, world!</h1>

<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <!-- here we should allow user to protect their account with a password !-->

  <div>
    <%= form.submit %>
  </div>
<% end %>
