<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<%= link_to("Create new user", new_user_path) %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">BridgeAPI UUID</th>
      <th scope="col">BridgeAPI Password</th>
      <th scope="col">Links</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.username %></td>
        <td><%= user.bridgeapi_uuid %></td>
        <td>xxxxxx</td>
        <td>
          <%= link_to("View", user)%>
          <%= link_to("Delete", user, data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure to delete #{user.username} forever?"
          })%>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
